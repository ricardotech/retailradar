# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/retailradar
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=retailradar
DATABASE_USER=user
DATABASE_PASSWORD=password

# API Keys
STOCKX_API_KEY=your_official_api_key
RAPIDAPI_KEY=your_rapidapi_key
CAPTCHA_SERVICE=2captcha
CAPTCHA_API_KEY=your_captcha_key

# Application Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=1800

# Puppeteer Configuration (Windows Development)
# Uncomment and adjust these for local Windows development:
# PUPPETEER_EXECUTABLE_PATH=C:\Program Files\Google\Chrome\Application\chrome.exe
# PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
# XDG_CONFIG_HOME=%USERPROFILE%\.cache\puppeteer
# XDG_CACHE_HOME=%USERPROFILE%\.cache\puppeteer

# Puppeteer Configuration (Linux/Docker)
# These are automatically set in Docker containers
# PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
# XDG_CONFIG_HOME=/tmp/.chromium
# XDG_CACHE_HOME=/tmp/.chromium